<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/rounded_corners_nongreen"
    >

    <ImageView
        android:id="@+id/imageView_header_image"
        android:layout_width="280dp"
        android:layout_height="150dp"
        app:layout_constraintBottom_toTopOf="@+id/textView_news_header_source"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/rounded_corners_without_border"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textView_news_header_source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:textColor="@color/grey"
        android:textStyle="bold"
        android:text="TextView"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_header_image" />

    <TextView
        android:id="@+id/textView_news_header_daysago"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="14dp"
        android:textColor="@color/grey"
        app:layout_constraintStart_toEndOf="@+id/textView_news_header_source"
        app:layout_constraintTop_toBottomOf="@+id/imageView_header_image" />

    <TextView
        android:id="@+id/textView_news_header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="16dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/textView_news_header_source"
        app:layout_constraintTop_toBottomOf="@+id/textView_news_header_source" />
</androidx.constraintlayout.widget.ConstraintLayout>